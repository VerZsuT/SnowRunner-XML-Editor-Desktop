{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "outDir": "../dist",
    "newLine": "LF",
    "baseUrl": ".",
    "strict": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "#types"        : [ "types/index"              ],
      "#types/*"      : [ "types/*"                  ],
      "#consts"       : [ "consts"                   ],
      "#enums"        : [ "enums/index"              ],
      "#enums/*"      : [ "enums/*"                  ],
      "#gl-texts/*"   : [ "texts/*"                  ],
      "#r-scripts/*"  : [ "renderer/scripts/*"       ],
      "#classes"      : [ "main/classes/index"       ],
      "#classes/*"    : [ "main/classes/*"           ],
      "#windows"      : [ "main/windows/index.ts"    ],
      "#windows/*"    : [ "main/windows/*"           ],
      "#services"     : [ "renderer/services/index"  ],
      "#services/*"   : [ "renderer/services/*"      ],
      "#components/*" : [ "renderer/components/*"    ],
      "#helpers/*"    : [ "renderer/helpers/*"       ],
      "#hooks/*"      : [ "renderer/hooks/*"         ],
      "#pages/*"      : [ "renderer/pages/*"         ],
      "#templates"    : [ "renderer/templates/index" ],
      "#templates/*"  : [ "renderer/templates/*"     ],
      "#m/*"          : [ "main/*"                   ],
      "#r/*"          : [ "renderer/*"               ],
      "#gl-helpers"   : [ "helpers"                  ],
      "#images/*"     : [ "images/*"                 ],
      "#src/*"        : [ "src/*"                    ]
    }
  },
  "exclude": ["node_modules"]
}
