{
  "name": "snowrunner-xml-editor-desktop",
  "productName": "SnowRunner XML Editor",
  "version": "0.3.1",
  "description": "Allows you to visually edit the game's XML files.",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "electron-forge package"
  },
  "keywords": [],
  "author": {
    "name": "VerZsuT",
    "email": "verzsut@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/icons/favicon.ico",
        "platform": "win32"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "app"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "12.0.0"
  }
}
