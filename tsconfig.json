{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "jsx": "react-jsx",
    "allowJs": true,
    "module": "ESNext",
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "dist",
    "newLine": "LF",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@sxmle-app": ["src/app/index"],
      "@sxmle-app/*": ["src/app/*"],
      "@sxmle-service": ["src/scripts/service/index"],
      "@sxmle-service/*": ["src/scripts/service/*"],
      "@sxmle-templates": ["src/scripts/templates/index"],
      "@sxmle-templates/*": ["src/scripts/templates/*"],
      "@sxmle-texts": ["src/scripts/texts/index"],
      "@sxmle-texts/*": ["src/scripts/texts/*"],
      "@sxmle-images/*": ["src/images/*"],
      "@sxmle-bootstrap": ["src/scripts/bootstrap/bootstrap.bundle.min.js"],
      "@sxmle-main-style": ["src/styles/main"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
